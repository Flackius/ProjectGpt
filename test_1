<html>
  <head>
    <title>Selección de Profesor y Materia</title>
  </head>
  <body>
    <h1>Selección de Profesor y Materia</h1>
    
    <!-- Selección de Profesor -->
    <label for="profesor">Seleccione un Profesor:</label>
    <select id="profesor" name="profesor" onchange="cargarMaterias()">
      <option value="">Seleccione un Profesor</option>
      <option value="profesor1">Profesor 1</option>
      <option value="profesor2">Profesor 2</option>
      <option value="profesor3">Profesor 3</option>
    </select>
    
    <!-- Selección de Materia -->
    <label for="materia">Seleccione una Materia:</label>
    <select id="materia" name="materia">
      <option value="">Seleccione un Profesor primero</option>
    </select>
    
    <!-- Botón para agregar Materia -->
    <button onclick="agregarMateria()">Agregar Materia</button>
    
    <!-- Tabla de Materias seleccionadas -->
    <table id="tablaMaterias">
      <thead>
        <tr>
          <th>Profesor</th>
          <th>Materia</th>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>
    
    <script>
      function cargarMaterias() {
        // Obtener el valor seleccionado en el selector de Profesor
        const profesorSeleccionado = document.getElementById("profesor").value;
        
        // Obtener el selector de Materias
        const selectorMaterias = document.getElementById("materia");
        
        // Limpiar las opciones del selector de Materias
        selectorMaterias.innerHTML = "";
        
        // Si se ha seleccionado un Profesor, agregar las Materias correspondientes
        if (profesorSeleccionado) {
          if (profesorSeleccionado === "profesor1") {
            selectorMaterias.add(new Option("Materia 1"));
            selectorMaterias.add(new Option("Materia 2"));
          } else if (profesorSeleccionado === "profesor2") {
            selectorMaterias.add(new Option("Materia 3"));
            selectorMaterias.add(new Option("Materia 4"));
          } else if (profesorSeleccionado === "profesor3") {
            selectorMaterias.add(new Option("Materia 5"));
            selectorMaterias.add(new Option("Materia 6"));
          }
        } else {
          // Si no se ha seleccionado un Profesor, mostrar mensaje de advertencia
          selectorMaterias.add(new Option("Seleccione un Profesor primero"));
        }
      }
      
      function agregarMateria() {
        // Obtener los valores seleccionados en los selectores de Profesor y Materia
        const profesorSeleccionado = document.getElementById("profesor").value;
        const materiaSeleccionada = document.getElementById("materia").value;
        
